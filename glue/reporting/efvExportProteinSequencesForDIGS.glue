  ###  CONSOLIDATION REFERENCES
  # Export reference library sequences for DIGS 'consolidation' process
	
  module digsFastaProteinExporter
  

    # Hepacivirus genus
	export reference -f precursor_polyprotein -w "sequence.genus = 'Hepacivirus'" -o digs/fasta/consolidated/hepaci-precursor_polyprotein.faa

	# Flavivirus genus
	export reference -f precursor_polyprotein -w "sequence.name = 'YFV'" -o digs/fasta/consolidated/flavi-precursor_polyprotein.faa

	# Tamanavirus genus
 	export reference -f precursor_polyprotein -w "sequence.name = 'TABV'" -o digs/fasta/consolidated/tamana-precursor_polyprotein.faa

	# Jingmenvirus genus
	export reference -f seg3-NS3  -w "sequence.genus = 'Jingmenvirus' and name like '%_Seg3'" -o digs/fasta/consolidated/jingmen-NS3.faa
	export reference -f seg1-NS5  -w "sequence.genus = 'Jingmenvirus' and name like '%_Seg1'" -o digs/fasta/consolidated/jingmen-NS5.faa

	# Pesti-like genera
	export reference -f precursor_polyprotein -w "sequence.genus = 'Pestivirus'" -o digs/fasta/consolidated/pesti-precursor_polyprotein.faa
	export reference -f precursor_polyprotein -w "sequence.genus = 'PL1'" -o digs/fasta/consolidated/pl1-polyprotein.faa
	export reference -f precursor_polyprotein -w "sequence.genus = 'PL2'" -o digs/fasta/consolidated/pl2-polyprotein.faa

	exit


  exit




