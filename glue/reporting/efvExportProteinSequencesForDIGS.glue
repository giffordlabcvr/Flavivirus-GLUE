# Export flavivirus reference sequences for DIGS (individual hits)
# The sequences exported by these commands comprise the 'reference sequence library'
# that is used by DIGS to classify 'hits' - i.e. sets of similar sequences identified
# in a BLAST search.

project flaviviridae


  # This script will export sequence for use in database-integrated genome screening
  # https://giffordlabcvr.github.io/DIGS-tool/  

  # Create protein exporter module
  create module -f modules/eve/digsFastaProteinExporter.xml


  ###  PROBES
  # Export flavivirus probe sequences for DIGS
  # A minimal but broadly representative sequence set for use as 'probes'


  module digsFastaProteinExporter

    # Hepacivirus genus
	export reference -f core         -w "sequence.genus = 'Hepacivirus' and sequence.source.name = 'ncbi-refseqs'" -o digs/fasta/probes/hepaci-core.faa
	export reference -f e1_hepaci    -w "sequence.genus = 'Hepacivirus' and sequence.source.name = 'ncbi-refseqs'" -o digs/fasta/probes/hepaci-e1.faa
	export reference -f e2_hepaci    -w "sequence.genus = 'Hepacivirus' and sequence.source.name = 'ncbi-refseqs'" -o digs/fasta/probes/hepaci-e2.faa 
	export reference -f hepaci-NS2   -w "sequence.genus = 'Hepacivirus' and sequence.source.name = 'ncbi-refseqs'" -o digs/fasta/probes/hepaci-NS2.faa
	export reference -f hepaci-p7    -w "sequence.genus = 'Hepacivirus' and sequence.source.name = 'ncbi-refseqs'" -o digs/fasta/probes/hepaci-p7.faa
	export reference -f NS3          -w "sequence.genus = 'Hepacivirus' and sequence.source.name = 'ncbi-refseqs'" -o digs/fasta/probes/hepaci-NS3.faa
	export reference -f hepaci-NS4A  -w "sequence.genus = 'Hepacivirus' and sequence.source.name = 'ncbi-refseqs'" -o digs/fasta/probes/hepaci-NS4A.faa
	export reference -f hepaci-NS4B  -w "sequence.genus = 'Hepacivirus' and sequence.source.name = 'ncbi-refseqs'" -o digs/fasta/probes/hepaci-NS4B.faa
	export reference -f NS5          -w "sequence.genus = 'Hepacivirus' and sequence.source.name = 'ncbi-refseqs'" -o digs/fasta/probes/hepaci-NS5.faa

	# Flavivirus genus  
	export reference -f flavi-capsid   -w "sequence.genus = 'Flavivirus' and sequence.source.name = 'ncbi-refseqs'" -o digs/fasta/probes/flavi-capsid.faa
	export reference -f premembrane    -w "sequence.genus = 'Flavivirus' and sequence.source.name = 'ncbi-refseqs'" -o digs/fasta/probes/flavi-premembrane.faa
	export reference -f flavi-envelope -w "sequence.genus = 'Flavivirus' and sequence.source.name = 'ncbi-refseqs'" -o digs/fasta/probes/flavi-envelope.faa 
	export reference -f NS1            -w "sequence.genus = 'Flavivirus' and sequence.source.name = 'ncbi-refseqs'" -o digs/fasta/probes/flavi-NS1.faa
	export reference -f flavi-NS2A     -w "sequence.genus = 'Flavivirus' and sequence.source.name = 'ncbi-refseqs'" -o digs/fasta/probes/flavi-NS2A.faa
	export reference -f flavi-NS2B     -w "sequence.genus = 'Flavivirus' and sequence.source.name = 'ncbi-refseqs'" -o digs/fasta/probes/flavi-NS2B.faa
	export reference -f 2K             -w "sequence.genus = 'Flavivirus' and sequence.source.name = 'ncbi-refseqs'" -o digs/fasta/probes/flavi-2K.faa
	export reference -f NS3            -w "sequence.genus = 'Flavivirus' and sequence.source.name = 'ncbi-refseqs'" -o digs/fasta/probes/flavi-NS3.faa
	export reference -f flavi-NS4A     -w "sequence.genus = 'Flavivirus' and sequence.source.name = 'ncbi-refseqs'" -o digs/fasta/probes/flavi-NS4A.faa
	export reference -f flavi-NS4B     -w "sequence.genus = 'Flavivirus' and sequence.source.name = 'ncbi-refseqs'" -o digs/fasta/probes/flavi-NS4B.faa
	export reference -f NS5            -w "sequence.genus = 'Flavivirus' and sequence.source.name = 'ncbi-refseqs'" -o digs/fasta/probes/flavi-NS5.faa

	# Tamanavirus genus
	export reference -f flavi-capsid   -w "sequence.genus = 'Tamanavirus' and sequence.source.name = 'ncbi-refseqs'" -o digs/fasta/probes/tamana-capsid.faa
	export reference -f premembrane    -w "sequence.genus = 'Tamanavirus' and sequence.source.name = 'ncbi-refseqs'" -o digs/fasta/probes/tamana-premembrane.faa
	export reference -f flavi-envelope -w "sequence.genus = 'Tamanavirus' and sequence.source.name = 'ncbi-refseqs'" -o digs/fasta/probes/tamana-envelope.faa 
	export reference -f NS1            -w "sequence.genus = 'Tamanavirus' and sequence.source.name = 'ncbi-refseqs'" -o digs/fasta/probes/tamana-NS1.faa
	export reference -f flavi-NS2A     -w "sequence.genus = 'Tamanavirus' and sequence.source.name = 'ncbi-refseqs'" -o digs/fasta/probes/tamana-NS2A.faa
	export reference -f flavi-NS2B     -w "sequence.genus = 'Tamanavirus' and sequence.source.name = 'ncbi-refseqs'" -o digs/fasta/probes/tamana-NS2B.faa
	export reference -f 2K             -w "sequence.genus = 'Tamanavirus' and sequence.source.name = 'ncbi-refseqs'" -o digs/fasta/probes/tamana-2K.faa
	export reference -f NS3            -w "sequence.genus = 'Tamanavirus' and sequence.source.name = 'ncbi-refseqs'" -o digs/fasta/probes/tamana-NS3.faa
	export reference -f flavi-NS4A     -w "sequence.genus = 'Tamanavirus' and sequence.source.name = 'ncbi-refseqs'" -o digs/fasta/probes/tamana-NS4A.faa
	export reference -f flavi-NS4B     -w "sequence.genus = 'Tamanavirus' and sequence.source.name = 'ncbi-refseqs'" -o digs/fasta/probes/tamana-NS4B.faa
	export reference -f NS5            -w "sequence.genus = 'Tamanavirus' and sequence.source.name = 'ncbi-refseqs'" -o digs/fasta/probes/tamana-NS5.faa

	# Jingmenvirus genus
	export reference -f seg3-NS3       -w "sequence.genus = 'Jingmenvirus' and sequence.source.name = 'ncbi-refseqs' and name like '%_Seg3'" -o digs/fasta/probes/jingmen-NS3.faa
	export reference -f seg1-NS5       -w "sequence.genus = 'Jingmenvirus' and sequence.source.name = 'ncbi-refseqs' and name like '%_Seg1'" -o digs/fasta/probes/jingmen-NS5.faa

	exit


